@model IEnumerable<Design_Bureau.Entities.MultiStoreyHouseProject>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TermsOfReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChiefDesigner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermsOfReference.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceDetails.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChiefDesigner.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
